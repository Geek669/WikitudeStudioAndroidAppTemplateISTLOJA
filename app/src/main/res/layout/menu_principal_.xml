<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".sample_menu_principal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="141dp"
        android:layout_marginTop="150dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/nosotros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:onClick="pasar"
            android:scaleType="centerInside"
            android:src="@drawable/istl" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="107dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="35dp"
            android:text="Acerca de     Nosotros"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="150dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/contactos"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:onClick="map"
            android:scaleType="centerInside"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:text="Contactos" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="137dp"
        android:layout_height="123dp"
        android:layout_marginTop="350dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ra"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:onClick="inicio"
            android:scaleType="centerInside"
            android:src="@drawable/ra" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realidad Aumentada" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="155dp"
        android:layout_height="127dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="350dp"
        android:background="#00FFFFFF"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ayuda"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:adjustViewBounds="true"
            android:background="#00FFFFFF"
            android:onClick="ayuda"
            android:scaleType="centerInside"
            android:src="@drawable/ayuda" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="#00FFFFFF"
            android:text="Ayuda" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/null"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="102dp"
        android:text="Inicio"
        android:textColorHighlight="#FFFFFF"
        android:textSize="36sp" />
</RelativeLayout>